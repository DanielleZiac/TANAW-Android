        <item name="android:textColor">@color/black</item> <!-- Adjust text color -->
        <item name="itemIconSize">32dp</item> <!-- Adjust icon size -->
        <item name="android:paddingTop">26dp</item>  <!-- Top padding -->
        <item name="android:paddingBottom">26dp</item>  <!-- Top padding -->
