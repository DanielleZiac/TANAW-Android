<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/lightGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- About Us Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_gradient"
            android:padding="24dp"
            android:elevation="4dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="28sp"
                android:textColor="@color/teal_700"
                android:fontFamily="sans-serif-medium"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In 2024, we embarked on a mission to innovate and inspire."
                android:textSize="16sp"
                android:textColor="@color/teal_700"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- Vision and Mission Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Vision -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_gradient"
                android:padding="16dp"
                android:orientation="vertical"
                android:elevation="4dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vision"
                    android:textSize="18sp"
                    android:textColor="@color/teal_700"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empower communities with innovation."
                    android:textSize="14sp"
                    android:textColor="@color/teal_700"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Mission -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_gradient"
                android:padding="16dp"
                android:orientation="vertical"
                android:elevation="4dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mission"
                    android:textSize="18sp"
                    android:textColor="@color/teal_700"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create sustainable solutions for a better world."
                    android:textSize="14sp"
                    android:textColor="@color/teal_700"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Who We Are Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_gradient"
            android:orientation="vertical"
            android:elevation="4dp"
            android:padding="10dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who We Are"
                android:textSize="22sp"
                android:textColor="@color/teal_700"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginBottom="8dp" />




                <!-- Team Members -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/danielle"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_with_overlay"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="4dp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/hersey"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_with_overlay"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="4dp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/paul"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_with_overlay"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="4dp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/endrick"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_with_overlay"
                    android:elevation="4dp" />



        <!-- Join Us Section -->



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join Us Now!"
                android:textSize="22sp"
                android:textColor="@color/teal_700"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Become a part of our growing movement and innovate with us."
                android:textSize="16sp"
                android:textColor="@color/teal_700"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join Us"
                android:backgroundTint="@color/footerBlue"
                android:textColor="@android:color/white"
                android:elevation="8dp"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
