<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="75dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sdgIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/sdg1"
            android:scaleType="centerCrop"
            android:src="@drawable/sdg_1"
            android:background="@drawable/circle_with_overlay" />

        <!-- TextView for Title -->
        <TextView
            android:id="@+id/sdgNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SDG Number"
            android:textColor="@color/navy_300"
            android:background="@drawable/profile_card"
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" /> <!-- Initially hidden -->

    </FrameLayout>
</androidx.cardview.widget.CardView>
